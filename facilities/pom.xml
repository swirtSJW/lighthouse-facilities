<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>gov.va.api.health</groupId>
    <artifactId>service-starter</artifactId>
    <version>9.0.6</version>
    <relativePath/>
  </parent>
  <groupId>gov.va.api.lighthouse</groupId>
  <artifactId>facilities</artifactId>
  <version>3.0.95-SNAPSHOT</version>
  <packaging>jar</packaging>
  <properties>
    <commons-csv.version>1.8</commons-csv.version>
    <docker.imageName>lighthouse-facilities</docker.imageName>
    <docker.organization>ghcr.io/department-of-veterans-affairs</docker.organization>
    <guava.version>[30.0-jre,)</guava.version>
    <mssql-jdbc.version>7.4.1.jre8</mssql-jdbc.version>
    <swagger-maven-plugin.version>2.1.13</swagger-maven-plugin.version>
    <timezonemap.version>LATEST</timezonemap.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>gov.va.api.lighthouse</groupId>
      <artifactId>facilities-api</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>gov.va.api.health</groupId>
      <artifactId>service-auto-config</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-cache</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-data-jpa</artifactId>
    </dependency>
    <dependency>
      <groupId>org.liquibase</groupId>
      <artifactId>liquibase-core</artifactId>
    </dependency>
    <dependency>
      <groupId>com.microsoft.sqlserver</groupId>
      <artifactId>mssql-jdbc</artifactId>
      <version>${mssql-jdbc.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.guava</groupId>
      <artifactId>guava</artifactId>
      <version>${guava.version}</version>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-csv</artifactId>
      <version>${commons-csv.version}</version>
    </dependency>
    <!-- https://mvnrepository.com/artifact/us.dustinj.timezonemap/timezonemap -->
    <dependency>
      <groupId>us.dustinj.timezonemap</groupId>
      <artifactId>timezonemap</artifactId>
      <version>${timezonemap.version}</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>io.swagger.core.v3</groupId>
        <artifactId>swagger-maven-plugin</artifactId>
        <version>${swagger-maven-plugin.version}</version>
        <executions>
          <execution>
            <id>v0-facilities-swag</id>
            <phase>compile</phase>
            <goals>
              <goal>resolve</goal>
            </goals>
            <configuration>
              <resourceClasses>
                <resourceClass>gov.va.api.lighthouse.facilities.api.v0.FacilitiesService</resourceClass>
              </resourceClasses>
              <outputFileName>openapi</outputFileName>
              <contextId>openapi_v0</contextId>
              <outputPath>${project.build.outputDirectory}/v0</outputPath>
              <outputFormat>JSON</outputFormat>
              <prettyPrint>true</prettyPrint>
            </configuration>
          </execution>
          <execution>
            <id>v1-facilities-swag</id>
            <phase>compile</phase>
            <goals>
              <goal>resolve</goal>
            </goals>
            <configuration>
              <resourceClasses>
                <resourceClass>gov.va.api.lighthouse.facilities.api.v1.FacilitiesService</resourceClass>
              </resourceClasses>
              <outputFileName>openapi</outputFileName>
              <contextId>openapi_v1</contextId>
              <outputPath>${project.build.outputDirectory}/v1</outputPath>
              <outputFormat>JSON</outputFormat>
              <prettyPrint>true</prettyPrint>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!--
          Needed by facilities-tests to resolve DatamartFacility.
      -->
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <executions>
          <execution>
            <id>library-jar</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>library</classifier>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
